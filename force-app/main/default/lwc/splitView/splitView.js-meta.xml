<?xml version="1.0"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>62.0</apiVersion>
	<isExposed>true</isExposed>
	<targets>
		<target>lightning__AppPage</target>
		<target>lightning__HomePage</target>
		<target>lightning__RecordPage</target>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
	</targets>
	<targetConfigs>
        <targetConfig targets="lightning__RecordPage, lightning__AppPage, lightning__HomePage, lightningCommunity__Default">
            <property name="ObjName" label="Object API Name" type="String" required="false"/>
			<property name="fieldApiNames" label="Field API Names" type="String" required="false" description="Enter a comma-separated list of field API names" />
			<property name="pageSize" label="Page Size" type="Integer" required="false"/>
			<property name="fieldApiName" label="ListView Field Filter" type="String" description="Provide the api name of the picklist field"  required="false"/>
			<property name="sortFieldAPIName" label="Field API Name for Sorting" type="String" description="Provide the api name of the field to be sorted"  required="false"/>
			<property name="sortOrder" label="Sort Order" type="String" datasource="ASC,DESC" default="ASC"/>
			<property name="iconName" label="Icon Name of the Object" type="String" description="Example --> standard:opportunity_contact_role"  required="false"/>
			<property name="selectedStatus" label="Default filter value" type="String" required="false"/>


			</targetConfig>
    </targetConfigs>
</LightningComponentBundle>